                  .col-md-9
                    input.form-control(value="300")
                .form-group.no-mb
                  label.col-md-3.col-lg-2.control-label
                    span 规格图片
                  .col-md-9
                    .preview-edit
                      img.edit-picture(src="http://www.52guzhuang.com/data/attachment/forum/201708/29/113909ilyykz8lribwa54y.jpg" alt="edit-picture")
                      .close
                        i.iconfont.icon-Popupwindow-copy
                    .upload-inline-block
                      .upload
                        span.icon +
                        span.text 上传图片
                        input(type="file")
                .manage-tools
                  span.text-muted
                    i.iconfont.icon-delete
                  span.text-success
                    i.iconfont.icon-increase
      .panel
        .panel-heading 商品描述
        .panel-body
          form.form-horizontal
            .form-group
              label.col-md-1.control-label.required
                span 商品副标题
              .col-md-6.col-lg-4
                textarea.form-control(rows="4" placeholder="请在此输入对车辆的导购语")
          .tooltips
            .btn-group
              button.btn.active PC端
              button.btn 移动端
          form.form-horizontal
            .form-group
              label.col-md-1.control-label.required
                span 商品详情
              .col-md-8.col-lg-8
                textarea.form-control(rows="10" placeholder="富文本框（预留）")
      .panel
        .panel-heading 加价购及推荐设置
        .panel-body
          form.form-horizontal
            .form-group
              label.col-md-1.control-label.required
                span 加价购
              .col-md-8.col-lg-8
                .upload-bar
                  span.icon +
                  span.text 选择商品
                  input(type="file")
